@{
    Layout = null;
    HttpCookie cookie = Request.Cookies["login"];
    HttpCookie cookie_edit = Request.Cookies["login_edit"];
}
@model Models.ProjectViewModel
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <link rel="shortcut icon" href="/Assets/files/logo1.png">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Đăng nhập hệ thống</title>
    <meta name="msapplication-tap-highlight" content="no">
    <link href="/Assets/files/login.css" rel="stylesheet">
    <link href="/Assets/files/font-awesome.min.css" rel="stylesheet">
    <script src="/Assets/files/jquery.min.js.download"></script>
</head>
<div class="navbar-default">
    <div class="navbar-default menu-bar-top"></div>
    <div class="navbar-default menu-bar-bot-2"></div>
    <div class="navbar-default menu-bar-bot"></div>
    <div class="navbar-default sidebar" role="navigation">
        <div class="sidebar-nav navbar-collapse">
            <div class="login-form">
                <p id="div-pthongbao"></p>                 
                    @{
                        if ((cookie == null) && (cookie_edit == null))
                        {
                            using (Html.BeginForm("Index_2", "Login", new { id = ViewContext.RouteData.Values["id"] }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                                <div class="group">
                                    <div class="error">
                                        <span class="field-validation-valid" data-valmsg-for="Username" data-valmsg-replace="true"></span>
                                    </div>
                                    @Html.TextBoxFor(model => model.LoginModel.UserName, new { @class = "input", @id = "Username", @name = "Username", @placeholder = "Tên đăng nhập", @type = "text" })
                                </div>
                                <div class="group">
                                    <div class="error">
                                        <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                                    </div>
                                    @Html.TextBoxFor(model => model.LoginModel.Password, new { @class = "input", @id = "Password", @name = "Password", @placeholder = "Mật khẩu", @type = "password" })
                                </div>
                                <div class="group">
                                    <input checked="checked" data-val="true" data-val-required="The Ghi nhớ? field is required." id="RememberMe" name="RememberMe" type="checkbox" value="true"><input name="RememberMe" type="hidden" value="false"> Ghi nhớ đăng nhập
                                </div>
                                <div class="group">
                                    <button type="submit" value="Thêm" class="btn-sub btn-primary"> <b>Đăng Nhập</b> </button>
                                </div>
                            }
                        }
                        else
                        {
                            ;
                        }
                    }
                </div>
                        
        </div>
    </div>
    <!-- /.sidebar-collapse -->
</div>