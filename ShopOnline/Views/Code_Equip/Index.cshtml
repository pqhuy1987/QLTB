@model Models.Code_EquipViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3">
        <!-- /.panel-heading -->
        <div class="panel-body-2">
            <button type="submit" onclick=" window.open('/Code_Equip/Create', 'windowName', 'width=400, height=700, left=24, top=24, scrollbars, resizable')" style=" margin-left:0px; margin-bottom:10px" class="btn btn-primary"><b>+ TẠO MỚI THÔNG TIN</b></button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-size:16.5px"><b>BẢNG MÃ THIẾT BỊ CHI TIẾT</b></div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-lg-6" style="padding-left:0px">
                    <label style="background-color: #07347E; color: white; border-radius: 5px; padding: 5px; display: block; "> LỌC MÃ THIẾT BỊ THEO GROUP: </label>
                    <div class="form-group">
                        @using (Ajax.BeginForm("Details", new AjaxOptions
                        {
                            HttpMethod = "Get",
                            InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
                        }))
                        {
                            @Html.DropDownListFor(model => Model.Code_EquipSelect.ID_Code, Model.Code_Group_All, "-- Chọn Group Thiết Bị --", new { @class = "form-control", @onchange = "$(this.form).submit();" })
                        }
                    </div>
                </div>
                <div id="dvCategoryResults">
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Group Thiết Bị</th>
                                <th>Mã Thiết Bị Chi Tiết</th>
                                <th>Chọn</th>
                                <th>Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1; int j = 0;}
                            @foreach (var item in Model.Code_Equip)
                            {
                                <tr class="odd gradeX">
                                    <td>@i</td>
                                    <td>@Html.DropDownListFor(model => Model.Code_Equip[j].ID_Code, new SelectList(Model.Code_Group_All, "Value", "Text", @Model.Code_Equip[j].ID_Code), new { @class = "form-control", @disabled = "disabled" })</td>
                                    <td>@item.Equip</td>
                                    <td>
                                        <button type="submit" onclick="window.open('/Code_Equip/Edit/'+@item.ID , 'windowName', 'width=400, height=700, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-success"><b>Sửa</b></button>
                                    </td>
                                    <td>
                                        <button type="submit" onclick="window.open('/Code_Equip/Delete/'+@item.ID , 'windowName', 'width=400, height=700, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-danger"><b>Xóa</b></button>
                                    </td>
                                </tr>
                                i++;
                                j++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="panel-footer"><b></b></div>
        </div>
    </div>
</div>


