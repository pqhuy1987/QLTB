@model Models.LLTCViewModel

@{
    int counter = 3;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-3">
        <!-- /.panel-heading -->
        <div class="panel-body-2">
            <button type="submit" onclick=" window.open('/LLTC/Create', 'windowName', 'width=400, height=700, left=24, top=24, scrollbars, resizable')" style=" margin-left:0px; margin-bottom:10px" class="btn btn-primary"><b>+ TẠO MỚI THÔNG TIN</b></button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên Công Ty/Đội</th>
                            <th>Tên Giám Đốc</th>
                            <th>Số Điện Thoại</th>
                            <th>Số Quân Có Thể Huy Động</th>
                            <th>Công Việc Thực Hiện</th>
                            <th>Khu Vực Thi Công</th>
                            <th>Mô Hình Tổ Chức</th>
                            <th>Hợp Tác</th>
                            <th>Ghi Chú</th>
                            <th>Công Trường</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 1;}
                        @foreach (var item in Model.LLTC)
                        {
                            <tr class="odd gradeX">
                                <td>@i</td>
                                <td>@item.Main_Name_LLTC</td>
                                <td>@item.Main_Name_Ower</td>
                                <td>@item.Main_Number</td>
                                <td>@item.Main_Total_Number</td>
                                <td>@item.Main_Name_Job</td>
                                <td>@item.Main_Area</td>
                                <td>@item.Main_Status</td>
                                <td>@item.Main_Rate</td>
                                <td>@item.Main_Note</td>
                                <td>
                                    <button type="submit" onclick="window.open('/LLTC/Details/'+@item.ID , 'windowName', 'width=900, height=700, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-info"><b>Thêm / Xem</b></button>
                                </td>
                                <td>
                                    <button type="submit" onclick="window.open('/LLTC/Edit/'+@item.ID , 'windowName', 'width=400, height=700, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-success"><b>Sửa</b></button>
                                </td>
                                <td>
                                    <button type="submit" onclick="window.open('/LLTC/Delete/'+@item.ID , 'windowName', 'width=400, height=700, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-danger"><b>Xóa</b></button>
                                </td>

                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

