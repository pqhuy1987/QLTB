@model Models.CS_tbWorkCountViewModels

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_Temp.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading" style="font-size:16.5px"><b>BẢNG CHẤM CÔNG CHO CÔNG TRƯỜNG </b></div>
            <!-- /.panel-heading -->
            <div class="panel-body">
            @using (Html.BeginForm("DetailsEditGet", "CS_tbWorkCount", new { id = Model.CS_tbWorkCount_Select.ID}, FormMethod.Post))
            {
                <table width="100%" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Đội</th>                           
                            <th>Công Việc</th>
                            <th>Ngày Bắt Đầu</th>
                            <th>Ngày Kết Thúc</th>
                            <th>Trạng Thái</th>
                            <th>Quân Số Thực Tế/Đăng Ký</th>
                            <th>Quân Số Thực Tế</th>
                        </tr>
                    </thead>

                    <tbody>
                            @{int i = 1; int j = 0;}
                            @foreach (var item in Model.CS_tbWorkCount_Sub)
                            {
                                <tr class="odd gradeX">
                                    <td>@i</td>
                                    <td>@Model.LLTC_temp[j].Main_Name_LLTC</td>
                                    <td>@Model.CS_tbWorkType_temp[j].SubWorkType</td>
                                    <td>@(Model.CS_tbLLTCTypeSub[j].CS_tbLLTCStartDateSub.HasValue ? @Model.CS_tbLLTCTypeSub[j].CS_tbLLTCStartDateSub.Value.ToString("dd/MM/yyyy") : "")</td>
                                    <td>@(Model.CS_tbLLTCTypeSub[j].CS_tbLLTCEndDateSub.HasValue ? @Model.CS_tbLLTCTypeSub[j].CS_tbLLTCEndDateSub.Value.ToString("dd/MM/yyyy") : "")</td>
                                    <td>@Model.CS_tbLLTCTypeSub[j].CS_tbLLTCStatusSub</td>
                                    <td>@Model.CS_tbWorkCount_Sub[j].CS_tbNumberDailyCount/@Model.CS_tbLLTCTypeSub[j].CS_tbLLTCNumberRegisterSub</td>
                                        <td>
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.CS_tbWorkCount_Sub[j].CS_tbNumberDailyCount, new { @class = "form-control", type = "number" })
                                                @Html.ValidationMessageFor(model => model.CS_tbWorkCount_Sub[j].CS_tbNumberDailyCount, null, new { @class = "text-danger", style = "font-weight:bold" })
                                                @Html.TextBoxFor(model => model.CS_tbWorkCount_Sub[j].ID, new { @class = "form-control", style = "display: none;" })
                                            </div>
                                        </td>
                                </tr>
                                i++;
                                j++;
                            }
                             
                    </tbody>
                </table>
                <div class="col-lg-12">
                    <button type="submit" class="btn-sub btn-primary"><b>Cập Nhật</b></button>
                 </div>                     
            }
            </div>
            <div class="panel-footer"><b></b></div>
        </div>
    </div>
</div>
