@model Models.CS_tbWorkCountViewModels

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Temp.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default-2">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @{      
                                using (Html.BeginForm("Create", "CS_tbWorkCount", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <label style="background-color: #07347E; color: white; border-radius: 5px; padding: 5px; display: block;">CHỌN DỰ ÁN: </label>
                                    <div class="form-group">
                                        @Html.DropDownListFor(model => model.CS_tbWorkCount_Select.tb_WorkCountProject_ID, Model.Project_Name_All, "-- Chọn Dự Án --", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => Model.CS_tbWorkCount_Select.tb_WorkCountProject_ID, null, new { @class = "text-danger", style = "font-weight:bold" })
                                    </div>
                                    <label style="background-color: #07347E; color: white; border-radius: 5px; padding: 5px; display: block; ">CHẤM CÔNG CHO NGÀY: </label>
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => Model.CS_tbWorkCount_Select.tb_WorkCountForDate, new { @class = "form-control", @type = "date" })
                                        @Html.ValidationMessageFor(model => Model.CS_tbWorkCount_Select.tb_WorkCountForDate, null, new { @class = "text-danger", style = "font-weight:bold" })
                                    </div>
                                    <label style="background-color: #07347E; color: white; border-radius: 5px; padding: 5px; display: block; ">NGƯỜI TẠO: </label>
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => Model.CS_tbWorkCount_Select.tb_WorkCountName_Report, new { @class = "form-control", Value = @Session["Name"], @readonly = "readonly" })
                                        @Html.ValidationMessageFor(model => Model.CS_tbWorkCount_Select.tb_WorkCountName_Report, null, new { @class = "text-danger", style = "font-weight:bold" })
                                    </div>
                                    <label style="background-color: #07347E; color: white; border-radius: 5px; padding: 5px; display: block; "> NGÀY TẠO: </label>
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => Model.CS_tbWorkCount_Select.tb_WorkCountDateTime_Report, new { @class = "form-control", Value = @DateTime.Now.ToShortDateString(), @readonly = "readonly" })
                                        @Html.ValidationMessageFor(model => Model.CS_tbWorkCount_Select.tb_WorkCountDateTime_Report, null, new { @class = "text-danger", style = "font-weight:bold" })
                                    </div>
                                    <p>
                                        <button type="submit" value="Thêm" class="btn btn-primary"> <b>THÊM</b> </button>
                                    </p>
                                    if (Model.ValidStatus == "Invalid") {
                                    <div class="alert alert-danger">
                                        Đã có bảng  chấm công cho công trường và ngày này
                                    </div>
                                    }
                                }
                            }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

