@model Models.CateloryViewModel

@{
    int counter = 3;
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Công Trường</th>
                            <th>Tên Đội</th>
                            <th>Người Đại Diện</th>
                            <th>Điện Thoại</th>
                            <th>Email</th>
                            <th>Quân Số</th>
                            <th>Công Việc</th>
                            <th>Ngày Tạo</th>
                            <th>Tình Trạng</th>
                            <th>Khu Vực</th>
                            <th>Đánh Giá</th>
                            <th>Chọn</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Catelory)
                        {
                            <tr class="odd gradeX">
                                <td>@item.ID</td>
                                @{
                                    foreach (var item1 in Model.Thiet_Bi)
                                    {
                                        if (item.Prj_Name == item1.Ten_Thiet_Bi)
                                        {
                                            counter = 2;
                                            break;
                                        }
                                        else
                                        {
                                            counter = 1;
                                        }
                                    }
                                    if (counter == 2)
                                    {
                                        <td>@item.Prj_Name</td>
                                    }
                                    else if (counter == 1)
                                    {
                                        <td style="color: red">@item.Prj_Name (Không tồn tại)</td>

                                    }

                                }
                                <td>@item.Unit_Name</td>
                                <td>@item.Owner_Name</td>
                                <td>@item.Phone_Number</td>
                                <td>@item.Email</td>
                                <td>@item.Person_Number</td>
                                <td>@item.Job</td>
                                <td>@(item.Create_Date.HasValue ? @item.Create_Date.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td>@item.Status</td>
                                <td>@item.Area</td>
                                <td>@item.Rate</td>
                                <td>

                                    <form action="@Url.Action("Edit", "Catelory",  new { id = @item.ID })" method="post">
                                        <input type="submit" value="Select" />
                                    </form>
                                </td>
                                <td>

                                    <form action="@Url.Action("Delete", "Catelory", new { id = @item.ID })" method="post">
                                        <input type="submit" value="Delete" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>